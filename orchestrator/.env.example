# --- Required: Supabase ---
SUPABASE_URL=https://zhbchbslvwrgjbzakeap.supabase.co
SUPABASE_SERVICE_ROLE_KEY=

# --- Required: Machine identity ---
# Unique ID for this machine (used for task claiming + dispatch)
ITACHI_MACHINE_ID=
# Human-readable name shown in Telegram (e.g. "air", "windows-pc")
ITACHI_MACHINE_NAME=

# --- Required: ElizaOS API ---
ITACHI_API_URL=https://itachisbrainserver.online

# --- Required: Workspace ---
# Directory where task repos get cloned into
# macOS:   /Users/yourname/itachi-workspaces
# Windows: C:\Users\yourname\itachi-workspaces
# Linux:   /home/yourname/itachi-workspaces
ITACHI_WORKSPACE_DIR=

# --- Optional: Tuning ---
ITACHI_MAX_CONCURRENT=2
ITACHI_POLL_INTERVAL_MS=5000
ITACHI_TASK_TIMEOUT_MS=600000
ITACHI_DEFAULT_MODEL=opus
ITACHI_DEFAULT_BUDGET=5.00
ITACHI_DEFAULT_ENGINE=claude

# --- Optional: Project paths (worktree mode) ---
# JSON map of project names to local repo paths. When set, the orchestrator
# creates git worktrees instead of fresh clones (faster, shares git history).
# Example: {"itachi-memory":"/Users/you/itachi-memory","my-app":"/Users/you/my-app"}
ITACHI_PROJECT_PATHS={}

# --- Optional: Project filter ---
# If set, only claim tasks for this project. Leave empty to claim any project.
ITACHI_PROJECT_FILTER=

# --- Optional: Legacy orchestrator ID (defaults to ITACHI_MACHINE_ID) ---
ITACHI_ORCHESTRATOR_ID=
